<% layout("layout/BoilerPlate") %>
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="card  mb-3">
                <img src="<%= campground.image %>" class="card-img-top" alt="Campground Image">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= campground.title %>
                    </h4>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item"> â‚¹<%= campground.price %>/night
                    </li>
                </ul>
                <div class="card-body">
                    <form action="/campground/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete Campground</button>
                    </form>
                    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit Details</a>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>

            </div>
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-4">
                <div class="mb-3 row">
                    <label for="stars" class="form-label">Stars</label>
                    <input type="range" class="form-range" name="review[rating]" min="1" max="5" step="1" id="rating">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Review</label>
                    <textarea class="form-control" id="body" name="review[body]" cols="30" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-info">Add review</button>
            </form>
        </div>
    </div>